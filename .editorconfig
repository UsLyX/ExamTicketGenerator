root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{json,json5}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,tsx,css,sass,scss,less,svg,vue}]
indent_style = space
indent_size = 2

[*.{xml,config}]
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.{js,ts,vue}]
quote_type = single

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
